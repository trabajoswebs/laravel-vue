APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict
SESSION_EXPIRE_ON_CLOSE=false
SESSION_CONNECTION=null
SESSION_TABLE=sessions
SESSION_STORE=null
SESSION_HTTP_ONLY=true
SESSION_PARTITIONED_COOKIE=false

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_DRIVER=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
AWS_URL=
AWS_ENDPOINT=

VITE_APP_NAME="${APP_NAME}"
VITE_DEV_SERVER_URL=http://127.0.0.1:5173
VITE_PORT=5173

# --- Servicios externos ---
POSTMARK_TOKEN=
RESEND_KEY=
SLACK_BOT_USER_OAUTH_TOKEN=
SLACK_BOT_USER_DEFAULT_CHANNEL=

# --- Localización ---
TRANSLATION_CACHE_HOURS=6
LOCALES_ALLOW_HTML=false

# --- Auditoría ---
AUDIT_SAMPLE_RATE=0.01
AUDIT_RETENTION_DAYS=90
AUDIT_LOG_CHANNEL=daily
AUDIT_SECURITY_CHANNEL=security

# --- Rate limiting (ver config/security.php) ---
# Login: máximo de intentos fallidos antes de bloqueo
LOGIN_MAX_ATTEMPTS=5
# Login: minutos de decaimiento para liberar intentos
LOGIN_DECAY_MINUTES=15

# Registro: máximos y decaimiento (minutos)
REGISTER_MAX_ATTEMPTS=3
REGISTER_DECAY_MINUTES=10

# Reset de contraseña: máximos y decaimiento (minutos)
PASSWORD_RESET_MAX_ATTEMPTS=3
PASSWORD_RESET_DECAY_MINUTES=10

# API: peticiones por minuto
API_RATE_LIMIT_PER_MINUTE=60

# General: peticiones por minuto
GENERAL_REQUESTS_PER_MINUTE=100

# Cambio de idioma: máximos y decaimiento (minutos)
LANGUAGE_CHANGE_MAX_ATTEMPTS=5
LANGUAGE_CHANGE_DECAY_MINUTES=5

# --- Autenticación ---
AUTH_GUARD=web
AUTH_PASSWORD_BROKER=users
AUTH_MODEL=App\\Models\\User
AUTH_PASSWORD_RESET_TOKEN_TABLE=password_reset_tokens
AUTH_PASSWORD_TIMEOUT=10800

# --- Configuración adicional ---
APP_PREVIOUS_KEYS=
DB_URL=
DB_FOREIGN_KEYS=true
DB_SOCKET=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# --- Seguridad Headers / CSP ---
SECURITY_ENABLE_HSTS=true
SECURITY_ENABLE_FRAME_OPTIONS=true
SECURITY_ENABLE_CONTENT_TYPE_OPTIONS=true
SECURITY_ENABLE_XSS_PROTECTION=true
SECURITY_ENABLE_REFERRER_POLICY=true
SECURITY_ENABLE_PERMISSIONS_POLICY=true
SECURITY_ENABLE_CORP=true
SECURITY_ENABLE_COOP=true
SECURITY_ENABLE_COEP=false
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CORP_POLICY=same-origin
SECURITY_COEP_POLICY=require-corp
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin
SECURITY_PERMISSIONS_POLICY=
SECURITY_DEBUG_CSP=false

TRUSTED_PROXIES=
TRUSTED_PROXIES_HEADERS=all

CSP_IMG_HOSTS=dxxxxx.cloudfront.net *.s3.amazonaws.com
CSP_CONNECT_HOSTS=
CSP_REPORT_URI=
CSP_REPORT_TO=
CSP_REPORT_TO_ENDPOINTS=
CSP_REPORT_TO_MAX_AGE=10886400
CSP_REPORT_TO_INCLUDE_SUBDOMAINS=false
CSP_DEV_IMG_HOSTS=
CSP_DEV_CONNECT_HOSTS=

INERTIA_SSR_ENABLED=false
INERTIA_SSR_URL=http://127.0.0.1:13714

# --- Media Library ---
# Driver de imagen para conversiones (gd o imagick)
IMAGE_DRIVER=imagick

# --- Límites de imagen (pipeline) ---
# Tamaño máximo de entrada en bytes (25MB por defecto)
IMG_MAX_BYTES=26214400
IMG_MAX_MEGAPIXELS=16
IMG_UNCOMPRESSED_MAX=536870912
IMG_NORMALIZE=true

# Escaneo de payloads (producción)
IMG_SCAN_CHUNK_BYTES=262144
IMG_SCAN_MAX_BYTES=4194304
IMG_SCAN_ALLOWED_BASE=/tmp
IMG_SCAN_RULES_BASE=/var/app/security/yara
IMG_SCAN_MAX_FILE_SIZE=20971520
IMG_SCAN_STRICT=false
IMG_SCAN_IDLE_TIMEOUT=10
IMG_IMAGICK_MEMORY_MB=128
IMG_IMAGICK_MAP_MB=256
IMG_IMAGICK_TIME_MS=750
IMG_IMAGICK_THREADS=2
IMG_DECODE_TIMEOUT_SECONDS=5
IMG_MAX_GIF_FRAMES=60

# Handlers externos (activar solo si están instalados)
IMG_SCAN_USE_CLAMAV=false
IMG_SCAN_CLAMAV_BIN=/usr/bin/clamdscan
IMG_SCAN_CLAMAV_TIMEOUT=10
IMG_SCAN_CLAMAV_ARGS="--no-summary --fdpass"

IMG_SCAN_USE_YARA=false
IMG_SCAN_YARA_BIN=/usr/bin/yara
IMG_SCAN_YARA_RULES=/etc/yara/rules/images.yar
IMG_SCAN_YARA_TIMEOUT=5
IMG_SCAN_YARA_ARGS="--fail-on-warnings --nothreads"
IMG_SCAN_ENABLED=false
IMG_SCAN_TIMEOUT_MS=5000
IMG_SCAN_CIRCUIT_MAX_FAILS=5

# Servido firmado de conversions (desactivado por defecto)
MEDIA_SIGNED_SERVE_ENABLED=false
