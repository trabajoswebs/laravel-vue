# --- Servicios externos ---
POSTMARK_TOKEN=
RESEND_KEY=
SLACK_BOT_USER_OAUTH_TOKEN=
SLACK_BOT_USER_DEFAULT_CHANNEL=

# --- Localización ---
TRANSLATION_CACHE_HOURS=6
LOCALES_ALLOW_HTML=false

# --- Auditoría ---
AUDIT_SAMPLE_RATE=0.01
AUDIT_RETENTION_DAYS=90
AUDIT_LOG_CHANNEL=daily
AUDIT_SECURITY_CHANNEL=security

# --- Rate limiting (ver config/security.php) ---
# Login: máximo de intentos fallidos antes de bloqueo
LOGIN_MAX_ATTEMPTS=5
# Login: minutos de decaimiento para liberar intentos
LOGIN_DECAY_MINUTES=15

# Registro: máximos y decaimiento (minutos)
REGISTER_MAX_ATTEMPTS=3
REGISTER_DECAY_MINUTES=10

# Reset de contraseña: máximos y decaimiento (minutos)
PASSWORD_RESET_MAX_ATTEMPTS=3
PASSWORD_RESET_DECAY_MINUTES=10

# API: peticiones por minuto
API_RATE_LIMIT_PER_MINUTE=60

# General: peticiones por minuto
GENERAL_REQUESTS_PER_MINUTE=100

# Cambio de idioma: máximos y decaimiento (minutos)
LANGUAGE_CHANGE_MAX_ATTEMPTS=5
LANGUAGE_CHANGE_DECAY_MINUTES=5

# --- Autenticación ---
AUTH_GUARD=web
AUTH_PASSWORD_BROKER=users
AUTH_MODEL=App\\Models\\User
AUTH_PASSWORD_RESET_TOKEN_TABLE=password_reset_tokens
AUTH_PASSWORD_TIMEOUT=10800

# --- Configuración adicional ---
APP_PREVIOUS_KEYS=
DB_URL=
DB_FOREIGN_KEYS=true
DB_SOCKET=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# --- Seguridad Headers / CSP ---
SECURITY_ENABLE_HSTS=true
SECURITY_ENABLE_FRAME_OPTIONS=true
SECURITY_ENABLE_CONTENT_TYPE_OPTIONS=true
SECURITY_ENABLE_XSS_PROTECTION=true
SECURITY_ENABLE_REFERRER_POLICY=true
SECURITY_ENABLE_PERMISSIONS_POLICY=true
SECURITY_ENABLE_CORP=true
SECURITY_ENABLE_COOP=true
SECURITY_ENABLE_COEP=false
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CORP_POLICY=same-origin
SECURITY_COEP_POLICY=require-corp
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin
SECURITY_PERMISSIONS_POLICY=
SECURITY_DEBUG_CSP=false

TRUSTED_PROXIES=
TRUSTED_PROXIES_HEADERS=all

CSP_IMG_HOSTS=
CSP_CONNECT_HOSTS=
CSP_REPORT_URI=
CSP_REPORT_TO=
CSP_REPORT_TO_ENDPOINTS=
CSP_REPORT_TO_MAX_AGE=10886400
CSP_REPORT_TO_INCLUDE_SUBDOMAINS=false
CSP_DEV_IMG_HOSTS=
